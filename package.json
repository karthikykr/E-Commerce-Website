{
  "name": "gruhapaaka-ecommerce",
  "version": "1.0.0",
  "description": "A modern, full-stack e-commerce platform for authentic homemade food products",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "lint": "cd frontend && npm run lint"
  },
  "keywords": [
    "ecommerce",
    "nextjs",
    "nodejs",
    "mongodb",
    "typescript",
    "tailwindcss",
    "homemade-food",
    "responsive-design"
  ],
  "author": "Gruhapaaka Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/gruhapaaka-ecommerce.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/gruhapaaka-ecommerce/issues"
  },
  "homepage": "https://github.com/your-username/gruhapaaka-ecommerce#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
